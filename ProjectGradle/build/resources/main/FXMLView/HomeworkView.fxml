<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.HomeworkController">
    <right>
        <GridPane BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
           <children>
               <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER">
                  <children>
                      <VBox alignment="TOP_RIGHT" prefHeight="200.0" prefWidth="100.0" spacing="20.0">
                         <children>
                             <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#create" text="Add" />
                             <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#delete" text="Delete" />
                         </children>
                      </VBox>
                      <VBox prefHeight="200.0" prefWidth="100.0" spacing="20.0">
                         <children>
                             <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#clear" text="Clear" />
                             <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#update" text="Update" />
                         </children>
                      </VBox>
                  </children>
               </HBox>
               <VBox alignment="TOP_RIGHT" prefHeight="200.0" prefWidth="100.0" spacing="3.0" GridPane.rowIndex="1">
                   <GridPane.margin>
                       <Insets right="15.0" />
                   </GridPane.margin>
                  <children>
                      <Label prefHeight="25.0" text="Start Week" />
                      <Label prefHeight="25.0" text="End Week" />
                      <Label prefHeight="25.0" text="Description" />
                  </children>
               </VBox>
               <VBox prefHeight="200.0" prefWidth="100.0" spacing="3.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                  <children>
                      <TextField fx:id="fnamefield" editable="false" promptText="Start Week" />
                      <TextField fx:id="lnamefield" promptText="End Week" />
                      <TextField fx:id="groupfield" promptText="Description" />
                  </children>
               </VBox>
               <Label alignment="CENTER" contentDisplay="CENTER" text="Homework CRUD" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                   <font>
                       <Font size="25.0" />
                   </font>
               </Label>
           </children>
        </GridPane>
    </right>
    <center>
        <TableView fx:id="table" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
</BorderPane>
